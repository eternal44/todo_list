<li class="list-group-item list-group-item-info">
  <%= task.description %>
  <%= task.deadline %>
    <%= link_to edit_task_path(task), remote: true do %>
      <button>Edit</button>
    <% end %>
    <%= link_to task, method: :delete, remote: true,
      data: { confirm: 'Are you sure?' } do %>
      <button>Delete</button>
    <% end %>
</li>
